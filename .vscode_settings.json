{
    // ‚öôÔ∏è Common settings
    "workbench.startupEditor": "newUntitledFile",
    "terminal.external.osxExec": "iTerm.app",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "search.useGlobalIgnoreFiles": true,
    "files.autoSave": "onFocusChange",
    "files.associations": {
        "Dockerfile-*": "dockerfile"
    },
    // ‚úçÔ∏è Editor
    "editor.minimap.enabled": false,
    "editor.formatOnSave": true,
    "editor.fontFamily": "Hack, Menlo, Monaco, monospace",
    "editor.fontSize": 16,
    "editor.lineHeight": 32,
    "editor.rulers": [
        120
    ],
    "editor.wordWrap": "on",
    "editor.wrappingIndent": "indent",
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.tree.horizontalScrolling": true,
    // ‚¨õ Terminal
    "terminal.integrated.fontFamily": "Hack, Menlo, Monaco, monospace",
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.lineHeight": 1.4,
    // üë®‚Äçüíª Programming languages
    "php.executablePath": "/usr/local/bin/php",
    // üêô Git
    "git.autofetch": true,
    "git.alwaysSignOff": true,
    "git.defaultCloneDirectory": "~/dev",
    "git.fetchOnPull": true,
    "git.rebaseWhenSync": true,
    "git.showPushSuccessNotification": true,
    // üé® CodelyTV theme draft
    "workbench.colorCustomizations": {
        "focusBorder": "#10fb7a",
    }
}